    update-alternatives --set rdoc /usr/bin/rdoc.ruby.ruby3.4; \
    update-alternatives --set ri /usr/bin/ri.ruby.ruby3.4; \
    ln -s /usr/bin/ruby.ruby3.4 /usr/local/bin/ruby; \
