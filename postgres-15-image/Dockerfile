LABEL org.opensuse.reference="registry.suse.com/suse/postgres:15-%RELEASE%"
LABEL org.openbuildservice.disturl="%DISTURL%"
LABEL com.suse.supportlevel="acc"
LABEL com.suse.eula="sle-eula"
