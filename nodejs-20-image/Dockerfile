    rm -vrf /etc/shadow-; \
    rm -vrf /etc/group-; \
    rm -vrf /etc/passwd-; \
    rm -vrf /etc/.pwd.lock; \
    rm -vrf /usr/lib/sysimage/rpm/.rpm.lock; \
    rm -vrf /var/cache/ldconfig/aux-cache; \
