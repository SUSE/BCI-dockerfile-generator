FROM alp/bci/bci-base:latest

MAINTAINER SUSE LLC (https://www.suse.com/)

# Define labels according to https://en.opensuse.org/Building_derived_containers
# labelprefix=com.suse.basalt.application.tomcat
LABEL org.opencontainers.image.title="Basalt Project Apache Tomcat 9"
LABEL org.opencontainers.image.description="Apache Tomcat 9 container based on the SUSE Adaptable Linux Platform (ALP)."
LABEL org.opencontainers.image.version="9"
LABEL org.opencontainers.image.url="https://susealp.io/"
